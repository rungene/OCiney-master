<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar"></style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
        <item name="android:actionDropDownStyle">@style/Widget.DropDownNav</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>


        <!-- Material Theme -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="21">@android:color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@android:color/black</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="21">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="21">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="21">true</item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="21">
            @android:transition/move
        </item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="21">
            @android:transition/move
        </item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ab_back_mtrl_am_alpha</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.TransparentActionBarTheme">
        <item name="android:actionDropDownStyle">@style/Widget.DropDownNav</item>
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.TransparentActivity" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/Widget.ActionBar.TitleTextStyle</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/ab_back_mtrl_am_alpha</item>
        <item name="android:textColorHint">@color/white25</item>
    </style>

    <style name="Widget.DropDownNav" parent="android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--RATING BAR STYLE -->
    <!-- SMALL -->
    <style name="RatingStar_Small" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_stars_small</item>
        <item name="android:indeterminateDrawable">@drawable/rating_stars_small</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
    <!-- MEDIUM -->
    <style name="RatingStar_Medium" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_stars_medium</item>
        <item name="android:indeterminateDrawable">@drawable/rating_stars_medium</item>
        <item name="android:minHeight">26dip</item>
        <item name="android:maxHeight">26dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
    <!-- BIG -->
    <style name="RatingStar_Big" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_stars_big</item>
        <item name="android:indeterminateDrawable">@drawable/rating_stars_big</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="movieLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="movieLineTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white65</item>
        <item name="typeface">Roboto-Light.ttf</item>
    </style>

    <style name="movieLineValue">
        <item name="android:id">@id/text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white75</item>
        <item name="typeface">Roboto-Bold.ttf</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right</item>
        <item name="android:lines">1</item>
    </style>

    <style name="bigTitleFicheFilm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:alpha">0.3</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="typeface">Roboto-Black.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="movieHeaderVignette">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>
